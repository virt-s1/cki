                            }
                            post {
                                failure {
                                    set_abort('deploy')
                                    remove()
                                }
                                aborted {
                                    set_abort('deploy')
                                    remove()
                                }
                            }
                        }
                        stage("setup") {
                            steps {
                                setup()
                            }
                            post {
                                failure {
                                    set_abort('setup')
                                    remove()
                                }
                                aborted {
                                    set_abort('setup')
                                    remove()
                                }
                            }
                        }
                        stage("install") {
                            steps {
                                install("${env.X86_64_KERNEL_NVR}")
                            }
                            post {
                                always {
                                    preserve_logs("console")
                                }
                                failure {
