                    } else if (env.X86_64_PATCH == "true") {
                        // clear kernel
                        sh "rm -rf \$HOME/downloads/aws-${env.X86_64_KERNEL_NVR}"
                        unstash 't2.medium-result'
                        unstash 't3a.medium-result'
                        unstash 'm4.large-result'
