                            environment name: 'X86_64_PATCH', value: 'true'
                        }
                    }
                    agent { label "container-fedora-35-prod" }
                    environment {
                        INSTANCE_TYPE = "m4.large"
                        ARCH = "x86_64"
                    }
                    stages {
